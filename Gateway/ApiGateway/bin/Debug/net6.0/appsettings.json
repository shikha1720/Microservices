{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Spring": {
    "Application": {
      "Name": "ApiGateway"
    }
  },
  "Eureka": {
    "Client": {
      "ServiceUrl": "http://eureka-server:8761/eureka/",
      "ValidateCertificates": false,
      "ShouldRegisterWithEureka": true
    },

    "Instance": {
      "NonSecurePort": 80,
      "HostName": "apigateway",
      "InstanceId": "ApiGateway"
      //"StatusPageUrlPath": "/index.html"
    },
    "AllowedHosts": "*"
  }
}
